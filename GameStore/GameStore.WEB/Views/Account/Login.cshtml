@model LoginViewModel
@section Styles{
    <link rel="stylesheet" href="~/css/custom/login.css" asp-append-version="true" />
 }

<div>
    <form asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
        <div asp-validation-summary="All"></div>
        <div class="d-flex flex-column">
            <input asp-for="UserName" />
            <input asp-for="Password" />
            <input asp-for="RemeberMe" />
        </div>
        <input type="submit" value="Sign in" />
    </form>
</div>